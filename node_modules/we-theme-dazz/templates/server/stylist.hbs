<div class="container">
  {{#if questionSend}}

    <p class="text-center"><a class="btn btn-success" href="/stylist">Buscar novamente</a></p>

    {{#if cards}}
      {{#we-grid items=cards cols=2}}
        <div class="cloth-picture">
          <h2>{{name}}</h2>
          {{#if picture}}
            {{we-image picture class="img-responsive thumbnail"}}
          {{/if}}
        </div>
      {{/we-grid}}
    {{else}}
      <p class="text-center">Sem sugestões no momento</p>
    {{/if}}

  {{else}}
    <div class="row">
      <div class="col col-md-6 col-md-offset-3">
        <h1 class="stylist-question-title">Para onde você vai?</h1>
        <form action="/stylist" method="post">
          <div class="form-group">
            <input class="form-control input-lg" name="question" placeholder="Me conte :)" value="{{questionSend}}" />
          </div>
          <div class="pull-right">
            <button class="btn btn-success btn-lg">Pesquisar</button>
          </div>
        </form>
      </div>
    </div>
  {{/if}}
</div>