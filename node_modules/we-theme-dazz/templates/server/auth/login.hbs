<div class="login-page">
<div class="container">
	<div class="row text-center"><div class="col col-md-4 col-md-offset-4">
		<h1 class="login-title">
		  <img class="login-logo" src="/public/project/logo.png">
			Dazz
		</h1>
		<p>
			<a class="btn btn-primary btn-login" href="/auth/facebook">Entrar com o facebook</a>
		</p>
		<p class="login-or">OU</p>
		<form action="/login" method="post">
			<div class="form-group">
				<input class="form-control input-lg" name="email" type="text" value="{{data.email}}" placeholder="Email">

			</div>
			<div class="form-group">
				<input class="form-control input-lg" name="password" type="text" value="{{data.password}}" placeholder="Senha">
			</div>			
			<div class="row">
				<div class="col col-md-6">
					<div class="pull-left">
						<input type="checkbox" checked >
						Continuar logado
					</div>
				</div>
				<div class="col col-md-6">
					<div class="form-group  pull-right">
						<button class="btn btn-success">Log in</button>
					</div>
				</div>
			</div>


		</form>
	</div>
</div>
</div>